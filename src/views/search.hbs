{{setTitle "Search"}}
<section class="search">
  <h1>Search</h1>

  <form class="search-form" action="/electronics/search" method="GET">
    <input
      type="text"
      class="search-name"
      name="searchName"
      value="{{filter.searchName}}"
      placeholder="Search Name..."
    />
    <input
      type="text"
      class="search-type"
      name="searchType"
      value="{{filter.searchType}}"
      placeholder="Search Type..."
    />
    <button type="submit" class="btn-search">Search</button>
  </form>

  {{#if electronics}}
    <!--If there are matches after search-->
    <div class="search-result">

      <div class="search-list">
        {{#each electronics}}
          <a
            href="/electronics/{{_id}}/details"
            class="added-electronics-in-market"
          >
            <img src="{{image}}" class="picture-added-electronics" />
            <h3>{{name}}{{type}}</h3>
            <span>Price: ${{price}}</span>
          </a>
        {{/each}}
      </div>

    </div>

  {{else}}
    <!--If there are no matches-->
    <div class="no-match">

      <p>No match was found!</p>

    </div>
  {{/if}}
</section>